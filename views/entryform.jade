div.toolbox
    h2= 'Submitting entry to ' 
        a(href=basepath+'compo/view/'+encodeURIComponent(componame))= componame
    form( name='createcompo', action=basepath+'entry/submit/'+componame, method='post', enctype='multipart/form-data') 
        label file: 
        input(type='file', name='file')
        | <br />
        label entry name: 
        input(type='text',
            name='entryname', 
            autofocus)
        | <br />
        label your nickname:
        input(type='text',
            name='nickname')
        | <br />
        label description (show on the screen):
        | <br />
        textarea(
            name='description')
        | <br />
        | <br />
        input.button(type='submit',
            value='submit entry!')
